# Logging level: DEBUG, INFO, WARNING, ERROR
log_level: "DEBUG"

# MQTT connection settings
mqtt:
  host: "localhost"
  port: 1883
  username: "your_mqtt_user"
  password: "your_mqtt_password"
  base_topic: "liontron"

# Vendor name used for MQTT device IDs and Home Assistant
vendor: "liontron"

# BLE MAC addresses of the batteries to be monitored
batteries:
  - "AA:BB:CC:DD:EE:FF"
  - "11:22:33:44:55:66"

# How often to update in seconds
update_interval: 60
